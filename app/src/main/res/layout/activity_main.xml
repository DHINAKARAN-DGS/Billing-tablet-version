<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#F63535"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:gravity="center"
                    android:text="Kadalai Mittai Billing"
                    android:textColor="#fff"
                    android:textSize="50dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="550dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:gravity="right"
                    android:text="Daat Studios"
                    android:textColor="#fff"
                    android:textSize="30dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/searchAndAdd"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_width="350dp"
                    android:layout_marginRight="80dp"
                    android:layout_height="wrap_content"
                    android:hint="Enter Product name"/>
                <Button
                    android:id="@+id/addToL"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#27A8F3"
                    android:text="add"
                    android:textSize="20dp"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/inventory"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#27A8F3"
                    android:text="Inventory"
                    android:textSize="20dp"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/printBtn"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#27A8F3"
                    android:text="Print"
                    android:textSize="20dp"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold" />

            </LinearLayout>
            <Button
                android:id="@+id/saveBtn"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#27A8F3"
                android:text="Save without print"
                android:textSize="20dp"
                android:layout_marginRight="20dp"
                android:textStyle="bold" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="50dp"
                android:id="@+id/listRV"/>
            <include
                layout="@layout/total_price_container"/>
            <EditText
                android:id="@+id/percentage"
                android:inputType="number"
                android:layout_width="150dp"
                android:gravity="center"
                android:layout_height="50dp"
                android:hint="Discount in %"/>
            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Discount"
                android:textSize="18dp"
                android:id="@+id/disc"/>
            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="cancel"
                android:textSize="18dp"
                android:id="@+id/canceldisc"/>
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>